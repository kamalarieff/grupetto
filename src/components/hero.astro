---
import { Picture } from "astro:assets";
import heroImage from "assets/hero-grupetto.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
---

<main
  class="grid lg:grid-cols-2 align-middle place-items-center pt-16 pb-8 md:pt-36 md:pb-36">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Grupetto logo"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Community first
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="/about"
        target="_blank"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxs-cloud-download" />

         About us
      </Link>
      <Link
        href="/gallery"
        target="_blank"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxs-cloud-download" />

         Gallery
      </Link>
      <Link
        href="/offers"
        target="_blank"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxs-cloud-download" />

         Offers
      </Link>
      <Link
        href="/partners"
        target="_blank"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxs-cloud-download" />

         Partners
      </Link>
    </div>
  </div>
</main>
